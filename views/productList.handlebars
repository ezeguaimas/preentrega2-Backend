<div class="container">
  <a class="detailButton" href="/cart/{{cartId}}">Ver Carrito</a>
  <h1>Listado de productos</h1>
  <div class="product-list">
    {{#each products.products}}
      <div class="card">
        <img src="{{this.thumbnails}}" alt="Thumbnail" />
        <h2>{{this.title}}</h2>
        <p>{{this.description}}</p>
        <p class="category">Categor√≠a: {{this.category}}</p>
        <p class="stock">Stock: {{this.stock}}</p>
        <p class="price">$ {{this.price}}</p>
        <a class="detailButton" href="/product/{{this._id}}">Ver detalles</a>
        <button class="addToCart" data-id="{{this._id}}">Agregar al carrito</button>
      </div>
    {{/each}}
  </div>
  <div class="pagination">
    {{#if products.hasPrevPage}}
      <a href="{{products.prevLink}}">Previous Page</a>
    {{/if}}
    <span>
      Page
      {{products.page}}
      of
      {{products.totalPages}}
    </span>
    {{#if products.hasNextPage}}
      <a href="{{products.nextLink}}">Next Page</a>
    {{/if}}
  </div>
</div>
<script src="/js/addProductToCart.js"></script>